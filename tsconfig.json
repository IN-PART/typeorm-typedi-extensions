{
    "compilerOptions": {
        "target": "es5",
        "lib": ["es5", "es6"],
        "module": "commonjs",
        "outDir": "build/compiled",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "declaration": true,
        "strict": false,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "exclude": [
        "build",
        "node_modules"
    ]
}
